@model IEnumerable<Otel>
<script src="~/Content/Admin/js/jquery-1.8.3.min.js"></script>
<div class="box">
    <div class="container">
        <div class="tesla-carousel" data-tesla-plugin="carousel" data-tesla-container=".tesla-carousel-items" data-tesla-item=">div" data-tesla-autoplay="false" data-tesla-rotate="false">
            <div class="site-title">
                <ul class="wrapper-arrows">
                    <li><i class="icon-517 prev" title="left arrow"></i></li>
                    <li><i class="icon-501 next" title="right arrow"></i></li>
                </ul>
                <div class="site-inside"><span>Oteller</span></div>
            </div>
            <div class="row">
                <div class="tesla-carousel-items">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3 col-xs-6">
                            <div class="product">
                                <div class="product-cover">
                                    <span class="product-action">
                                    </span>
                                    <div class="product-cover-hover"><span><a href="/Home/OtelDetay/@item.id">Görüntüle</a></span></div>
                                    <div class="product-details">
                                        <h1><a href="/Home/OtelDetay/@item.id">@item.Adi</a></h1>
                                        <h1>@item.Il-@item.Ilce</h1>
                                    </div>
                                    @if (item.Resim.Count > 0)
                                    {
                                        <img src="@item.Resim.FirstOrDefault(x=>x.Otelid==item.id).BuyukYol" alt="product name" />
                                    }
                                    <div class="product-details">
                                        <h1>Otel Puanı @item.OtelPuani</h1>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
