
@{
    ViewBag.Title = "Oteller";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}
@model IEnumerable<Otel>
@section head{
    <style>
        .dropdown {
            display: none;
        }

        .dropdown-on {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-items: center;
        }
    </style>
    <script src="~/Content/Admin/js/jquery-1.8.3.min.js"></script>
    <script>
        $(document).ready(function callbackfun() {
            $('.icon-plus').click(function myfunction() {
                $(".dropdown").toggleClass('dropdown-on');
            });
        })
    </script>
}
<section class="panel">

    <header class="panel-heading">
        <h3>Oteller</h3>
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/OtelEkle" class="btn btn-success">
                        Yeni Otel <i class="icon-plus"></i>
                    </a>
                </div>

            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Otel Adı</th>
                        <th>İl</th>
                        <th>İLçe</th>
                        <th>Adres</th>
                        <th>Telefon</th>
                        <th>E posta</th>
                        <th>Yıldız Sayısı</th>
                        <th>Oda Sayısı</th>
                        <th>Oda Tip</th>
                        <th>Otel Puanı</th>
                        <th>Resim Ekle</th>
                        <th>Personel Ekle</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var otel in Model)
                    {
                        <tr class="">
                            <td class="center">@otel.Adi</td>
                            <td class="center">@otel.Il</td>
                            <td class="center">@otel.Ilce</td>
                            <td class="center">@otel.Adres</td>
                            <td class="center">@otel.Telefon</td>
                            <td class="center">@otel.Eposta</td>
                            <td class="center">@otel.YildizSayisi</td>
                            <td class="center">@otel.OdaSayisi</td>
                            <td class="center">@otel.OdaTipid</td>
                            <td class="center">@otel.OtelPuani</td>
                            <td><a class="delete" href="#"><i class="icon-plus"></i></a></td>
                            <td><a class="delete" href="/Admin/PersonelEkle/@otel.id"><i class="icon-plus"></i></a></td>
                            <td><a class="edit" href="/Admin/OtelDuzenle/@otel.id"><i class="icon-pencil"></i></a></td>
                            <td><a class="delete" href="/Admin/OtelSil/@otel.id"><i class="icon-trash"></i></a></td>
                            <td>
                                <div class="dropdown">
                                    <form action="/Admin/OtelResimEkle" method="post" enctype="multipart/form-data">
                                        <input type="hidden" name="oid" value="@otel.id" />
                                        <input type="file" name="fileUpload" />
                                        <input type="submit" class="btn btn-success" value="Kaydet" />
                                        
                                    </form>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>

            </table>
        </div>
    </div>
</section>