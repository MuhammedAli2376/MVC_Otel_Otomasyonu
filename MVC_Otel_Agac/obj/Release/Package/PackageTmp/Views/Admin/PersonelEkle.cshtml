
@{
    ViewBag.Title = "Personel Ekle";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}
@model Otel
@section head{
    <script type="text/javascript" src="/Content/Admin/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script type="text/javascript" src="/Content/Admin/assets/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
    <script type="text/javascript" src="/Content/Admin/assets/bootstrap-daterangepicker/daterangepicker.js"></script>
    <script type="text/javascript" src="/Content/Admin/assets/bootstrap-colorpicker/js/bootstrap-colorpicker.js"></script>
    <script type="text/javascript" src="/Content/Admin/assets/bootstrap-timepicker/js/bootstrap-timepicker.js"></script>
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-datepicker/css/datepicker.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-timepicker/compiled/timepicker.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-colorpicker/css/colorpicker.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-daterangepicker/daterangepicker-bs3.css" />
    <link rel="stylesheet" type="text/css" href="/Content/Admin/assets/bootstrap-datetimepicker/css/datetimepicker.css" />
}
<br /><br /><br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h3>Personel Ekle</h3>
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" action="/Admin/PersonelEkle" method="post">
                    <input type="hidden" value="@Model.id" name="Otelid" />
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Soyadı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Soyadi">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Puan</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Puan">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">TCKN</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="TCKN">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Telefon</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Telefon">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Adres</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Adres">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Eposta</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Eposta">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Departmaid</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Departmanid">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Pozisyonid</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Pozisyonid">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>



