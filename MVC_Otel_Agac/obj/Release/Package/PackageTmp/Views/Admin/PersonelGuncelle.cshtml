
@{
    ViewBag.Title = "Personel Guncelle";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}
@model Personel
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h3>Otel Duzenle</h3>
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" action="/Admin/PersonelGuncelle" method="post">
                    <input type="hidden" value="@Model.id" name="id" />
                    <input type="hidden" value="@Model.Otelid" name="Otelid" />
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Adı</label>
                        <div class="col-lg-10">
                            <input type="text" value="@Model.Adi" placeholder="" id="f-name" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Soyadı</label>
                        <div class="col-lg-10">
                            <input type="text" value="@Model.Soyadi" placeholder="" id="f-name" class="form-control" name="Soyadi">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Puan</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" value="@Model.Puan" id="f-name" class="form-control" name="Puan">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">TCKN</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.TCKN" class="form-control" name="TCKN">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Telefon</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.Telefon" class="form-control" name="Telefon">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Adres</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" value="@Model.Adres" id="f-name" class="form-control" name="Adres">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Eposta</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.Eposta" class="form-control" name="Eposta">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Departmaid</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.Departmanid" class="form-control" name="Departmanid">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Pozisyonid</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.Pozisyonid" class="form-control" name="Pozisyonid">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>


