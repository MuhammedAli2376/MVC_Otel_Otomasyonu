
@{
    ViewBag.Title = "Personeller";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}
@model IEnumerable<Personel>

@section head{
    <script src="~/Content/Admin/js/jquery-1.8.3.min.js"></script>
    <script>
        $(document).ready(function myfunction() {
            $(".puanver").click(function myfunction() {
                var deger = prompt("Puan Veriniz:");
                var id = $(this).attr('name');
                $.ajax({
                    method: "GET",
                    url: "/Admin/PuanVer",
                    data: {
                        id: id,
                        puan: deger
                    }
                }).done(function myfunction() {
                    $(location).attr('href', '/Admin/Personeller');
                })
            });
        })
       
    </script>
}
<section class="panel">

    <header class="panel-heading">
        <br /><br /><br />
        <h2>Personeller</h2>
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/PersonelPuanSirala" class="btn btn-success">
                        Puana Göre sırala <i class=""></i>
                    </a>
                </div>

            </div>
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Personel Adı</th>
                        <th>Soyadı</th>
                        <th>Puanı</th>
                        <th>Tc Kimlik no</th>
                        <th>Telefon</th>
                        <th>Adres</th>
                        <th>E posta</th>
                        <th>Departman Adı</th>
                        <th>Pozisyon Adı</th>
                        <th>Otel Adı</th>
                        <th>Puan Ver</th>
                        <th>Düzenle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var personel in Model)
                    {
                        <tr class="">
                            <td class="center">@personel.Adi</td>
                            <td class="center">@personel.Soyadi</td>
                            <td class="center">@personel.Puan</td>
                            <td class="center">@personel.TCKN</td>
                            <td class="center">@personel.Telefon</td>
                            <td class="center">@personel.Adres</td>
                            <td class="center">@personel.Eposta</td>
                            <td class="center">@personel.Departmanid</td>
                            <td class="center">@personel.Pozisyonid</td>
                            <td class="center">@personel.Otelid</td>
                            <td><a class="edit" href="#"><i class="icon-plus puanver" name="@personel.id"></i></a></td>
                            <td><a class="edit" href="/Admin/PersonelGuncelle/@personel.id"><i class="icon-pencil"></i></a></td>
                            <td><a class="delete" href="/Admin/PersonelSil/@personel.id"><i class="icon-trash"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

