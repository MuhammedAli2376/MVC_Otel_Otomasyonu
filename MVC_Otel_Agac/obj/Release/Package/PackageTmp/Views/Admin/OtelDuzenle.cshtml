
@{
    ViewBag.Title = "OtelDuzenle";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}
@model Otel
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h3>Otel Duzenle</h3>
            </header>
            <div class="panel-body">
                <form role="form" class="form-horizontal tasi-form" action="/Admin/OtelDuzenle" method="post">
                    <input type="hidden" value="@Model.id" name="id"/>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Adı</label>
                        <div class="col-lg-10">
                            <input type="text"value="@Model.Adi" placeholder="" id="f-name" class="form-control" name="Adi">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">İl</label>
                        <div class="col-lg-10">
                            <input type="text" value="@Model.Il" placeholder="" id="f-name" class="form-control" name="Il">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">İlce</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder=""  value="@Model.Ilce"id="f-name" class="form-control" name="Ilce">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Adres</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.Adres" class="form-control" name="Adres">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Telefon</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.Telefon" class="form-control" name="Telefon">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Eposta</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" value="@Model.Eposta" id="f-name" class="form-control" name="Eposta">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Yıldız Sayısı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name"value="@Model.YildizSayisi " class="form-control" name="YildizSayisi">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Oda Sayısı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.OdaSayisi" class="form-control" name="OdaSayisi">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Oda Tip id</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.OdaTipid" class="form-control" name="OdaTipid">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label class="col-lg-4 ">Otel Puanı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" value="@Model.OtelPuani" class="form-control" name="OtelPuani">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
